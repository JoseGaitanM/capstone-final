{
    "name": "PySpark Testing",
    "image": "spark-air",
    "extensions": ["ms-python.python"],
    "runArgs": ["--env", "DISPLAY=${DISPLAY}", "--env", "QT_SCALE_FACTOR=${QT_SCALE_FACTOR}", "--env", "QT_AUTO_SCREEN_SCALE_FACTOR=1", "--env", "QT_SCREEN_SCALE_FACTORS=${QT_SCALE_FACTOR}"],
    "forwardPorts": [8882],
    "containerEnv": {
        "DISPLAY": "${DISPLAY}",
        "QT_SCALE_FACTOR": "${QT_SCALE_FACTOR}",
        "QT_AUTO_SCREEN_SCALE_FACTOR": "1",
        "QT_SCREEN_SCALE_FACTORS": "${QT_SCALE_FACTOR}"
    },
    "remoteUser": "root",
    "settings": {
        "python.pythonPath": "/usr/local/bin/python"
    }
}